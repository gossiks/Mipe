<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="150"
    >


    <ImageView
        android:id="@+id/imageSent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:src="@drawable/no_image_yet"
        android:scaleType="centerCrop" />
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/progressBarPhoto"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>


    <LinearLayout
        android:id="@+id/firststrow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/imageSent"
        android:layout_weight="30"
        android:orientation="horizontal" >


        <info.hoang8f.widget.FButton
            android:id="@+id/buttonTakePhoto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:drawablePadding="0dp"
            android:minHeight="80dp"
            android:minWidth="250dp"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:paddingTop="-5dp"
            android:text="take photo"
            android:layout_weight="1"
            android:layout_margin="10dp"
            fbutton:buttonColor="@color/MipeTheme.main.attribute"
            android:textColor="@color/abc_primary_text_material_dark"
            fbutton:cornerRadius="15dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="6dp" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="#enter #hashtags"
            android:layout_margin="10dp"
            android:inputType="textNoSuggestions"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/seconrow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/firststrow"
        android:layout_weight="30"
        android:orientation="horizontal" >

        <info.hoang8f.widget.FButton
            android:id="@+id/buttonChoosePhoto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:drawablePadding="0dp"
            android:minHeight="80dp"
            android:minWidth="250dp"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:paddingTop="-5dp"
            android:text="choose photo"
            android:layout_weight="1"
            android:layout_margin="10dp"
            fbutton:buttonColor="@color/MipeTheme.main.attribute"
            android:textColor="@color/abc_primary_text_material_dark"
            fbutton:cornerRadius="15dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="6dp" />
        <info.hoang8f.widget.FButton
            android:text="send"
            android:id="@+id/buttonsend"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:drawablePadding="0dp"
            android:minHeight="80dp"
            android:minWidth="250dp"
            android:layout_margin="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:paddingTop="-5dp"
            android:layout_weight="1"
            fbutton:buttonColor="@color/MipeTheme.main.attribute"
            android:textColor="@color/abc_primary_text_material_dark"
            fbutton:cornerRadius="15dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="6dp" />
    </LinearLayout>

</LinearLayout>